<!DOCTYPE html>
<html>
    <head>

        <!-- Meta Tag -->
        <meta charset="utf-8">
        <meta name="description" content="Contact Form">
        <meta name="keywords" content="Nodejs,UIkit,Nodemailer,Expressjs">
        <meta name="author" content="Author">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title -->
        <title>Contact Us</title>

        <!-- Font -->
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,500" rel="stylesheet">

        <!-- CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.31/css/uikit.min.css" />
        <link rel="stylesheet" href="/public/css/lightBlue.css">
        
    </head>
    <body>

        <!-- Container -->
        <div class="uk-container uk-container-small uk-box-shadow-medium">
            <div uk-grid>

                <!-- First Column -->
                <div class="uk-width-2-3@m left-column">

                    <!-- Navbar -->
                    <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
                        <div class="uk-navbar-left">
                            <ul class="uk-navbar-nav">
                                    <li><a href="#">Home</a></li>
                                    <li><a href="#">About</a></li>
                                    <li><a href="#">Contact</a></li>
                            </ul>
                        </div>
                    </nav>
                    
                    <!-- Contact Form Title -->
                    <div class="tittle-container uk-align-center">
                        <h2 class="tittle">Get in Touch</h2>
                        <h4 class="subtitle">We'd love hear from you</h4>
                    </div>

                    <!-- Form -->
                    <form class="contact-form" method="POST" action="send">
                        {{{msg}}}
                        <fieldset class="uk-fieldset">

                            <!-- Name -->
                            <div class="uk-margin">
                                    <label class="uk-form-label" for="form-stacked-text">Your Name</label>
                                    <input class="uk-input" name="name" type="text" required>
                            </div>

                            <!-- Email -->
                            <div class="uk-margin">
                                    <label class="uk-form-label" for="form-stacked-text">Email Adress</label>
                                    <input class="uk-input" name="email" type="email" required>
                            </div>
                            
                            <!-- Message -->
                            <div class="uk-margin">
                                    <label class="uk-form-label" for="form-stacked-text">Message</label>
                                    <textarea class="uk-textarea" name="message" rows="5" required></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class=".uk-margin-small">
                                <input class="uk-button uk-align-center" type="submit" value="Submit">
                            </div>

                        </fieldset>
                    </form>
                </div>
                <!-- End First Coloumn -->
                
                <!-- Right Column -->
                <div class="uk-width-1-3@m right-column">

                    <!-- Search Form -->
                    <div class="uk-margin">
                            <form class="uk-search uk-search-default uk-align-center">
                                    <input class="uk-search-input" type="search" placeholder="Search...">
                            </form>
                    </div>
                    
                    <!-- Company Info -->
                    <div class="contact-info">
                    <h3>Contact Info</h3>
                        <p class="uk-clearfix"><span class="uk-float-left" uk-icon="icon: location"></span>&nbsp; 80 Guild Street, London, N7 8EP</p>
                        <p><span uk-icon="icon: phone"></span>&nbsp; +44 7700 900041</p>
                        <p><span uk-icon="icon: mail"></span>&nbsp; support@example.com</p>
                    </div>
                    
                    <!-- Social Icons -->
                    <div class="uk-align-center">
                        <ul class="uk-iconnav">
                                <li><a href="" target="_blank" title="facebook" uk-icon="icon: facebook"></a></li>
                                <li><a href="" target="_blank" title="twitter" uk-icon="icon: twitter"></a></li>
                                <li><a href="" target="_blank" title="linkedin" uk-icon="icon: linkedin"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.31/js/uikit.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.31/js/uikit-icons.min.js"></script>

    </body>
</html>
